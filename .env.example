# ==============================================================================
# DWOLLA PAYMENT GATEWAY (Server-side only - NEVER prefix with VITE_)
# ==============================================================================

# Dwolla API credentials (get from https://dashboard.dwolla.com/)
DWOLLA_APP_KEY=your_dwolla_app_key_here
DWOLLA_APP_SECRET=your_dwolla_app_secret_here

# Environment: 'sandbox' for testing, 'production' for live payments
DWOLLA_ENVIRONMENT=sandbox

# Webhook secret for signature verification
DWOLLA_WEBHOOK_SECRET=your_webhook_secret_here

# TradeSphere's master funding source (where customer payments go)
# This is YOUR company's bank account URL in Dwolla
DWOLLA_MASTER_FUNDING_SOURCE_URL=your_company_dwolla_funding_source_url

# ==============================================================================
# SUPABASE DATABASE (Shared with main app)
# ==============================================================================

# Supabase project URL (publicly accessible - can use VITE_ prefix for client)
VITE_SUPABASE_URL=your_supabase_project_url

# Service role key (SERVER-SIDE ONLY - never prefix with VITE_)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================================================
# EMAIL SERVICE (SendGrid)
# ==============================================================================

# SendGrid API key for sending welcome emails
SENDGRID_API_KEY=your_sendgrid_api_key_here

# From email address for automated emails
FROM_EMAIL=noreply@tradesphere.com

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Frontend URL (website)
FRONTEND_URL=http://localhost:5173

# App URL (for onboarding link in welcome email)
APP_URL=https://app.tradesphere.com